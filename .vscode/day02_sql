--create employees table
create table Employee_us (
    EmployeeID int PRIMARY KEY,
    Firstname Varchar(50),
    Lastname Varchar(50),
    Department Varchar(50)
);

--Insert sample data into emplyees table
Insert into Employee_us (EmployeeID, Firstname, Lastname, Department) VALUES
(1, 'Alice', 'Smith', 'Finance'),
(2, 'Bob', 'Johnson', 'Engineering'),
(3, 'Charlie', 'Williams', 'Marketing'),
(4, 'Diana', 'Brown', 'Finance'),
(5, 'Edward', 'Jones', 'Engineering'),
(6, 'Fiona', 'Garcia', 'Marketing'),
(7, 'George', 'Miller', 'Finance'),
(8, 'Hannah', 'Wilson', 'Engineering');




--1) Find Employees whose Last Name starts with 'S'.

select * from Employee_us where Lastname like 's%'

--2) Find Employees whose First Name ends with 'a'.

select * from Employee_us where Firstname like '%a'

--3) Find Employees whose Department contains 'Eng'.

select * from Employee_us where Department like '%Eng%'

--4) Find Employees whose Last Name is exactly 5 characters long.

select * from Employee_us where Lastname like '_____'
-- 5 times underscore because it represents exactly one character and we wanted 5 characters

--5) Find Employees whose First Name starts with 'C' or 'D'.

select * from Employee_us where Firstname like '[CD]%'
-- this square bracket is used to define that the name starts with either C or D

--6) Find Employees whose Last Name contains 'son'.

select * from Employee_us where Lastname like '%son%'

--7) Find Employees whose First Name contains the letter 'i' as the second character.

select * from Employee_us where firstname like '_i%'
-- so in this the first character is showned by underscore and then i and many
-- words can be there so percentage sign is used

--8) Find Employees whose Last Name starts with any letter between 'A' and 'L'.

select * from Employee_us where Lastname like '[A-L]%'
-- so this hyphen inside the square bracket is used to define that the letters
-- are from a to l

--9) Find Employees whose First Name does not contain 'o'.

select * from Employee_us where Firstname not like '%o%'

--10) Find Employees whose Last Name ends with 'a' and is exactly 5 characters long.

select * from Employee_us where Lastname like '____a'

--11) Find Employees whose Department starts with 'Mar' and ends with 'ing'.

select * from Employee_us where Department like 'Mar%ing'

--12) Find Employees whose First Name has an 'a' in the third position.

select * from Employee_us where Firstname like '__a%'

--13) Find Employees whose Last Name starts with 'Br' or 'Bl'.

select * from Employee_us where Lastname like 'Br%' or lastname like 'Bl%'

--14) Find Employees whose First Name starts with a vowel.

select * from Employee_us where Firstname like '[aeiou]%'

--15) Find Employees whose First Name does not start with a consonant.

select * from Employee_us where Firstname not like '[aeiou]%'
select * from Employee_us where Firstname like '[^aeiou]%'

--16) Find Employees whose First Name starts with a consonant.

select * from Employee_us where Firstname like '[^aeiou]%'
